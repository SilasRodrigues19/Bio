---
import Divider from "@/components/Divider.astro";
import Layout from "@/layouts/Layout.astro";
import AboutPageIcons from "./AboutPageIcons.astro";

import { birthday } from "../../utils/birthday";

const age = birthday("1999-04-22");

import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout
  title={t("about.layout.title")}
  description={t("about.layout.description")}
>
  <section class="min-h-screen pb-16 sm:pb-20">
    <div
      class="mx-auto mt-12 max-w-2xl px-4 text-left sm:px-6 lg:max-w-7xl lg:px-8"
    >
      <div class="my-4 flex flex-col gap-4 sm:gap-6">
        <h1
          class="text-4xl font-medium tracking-tight text-primary-950/70 dark:text-primary-200/70 sm:text-3xl lg:text-5xl"
        >
          {t("about.presentation.title")}
        </h1>
        <p
          class="text-lg text-primary-950/70 dark:text-primary-200/70 sm:text-xl"
        >
          <span>{t("about.presentation.paragraph-before")}</span>
          {age}
          <span>
            {t("about.presentation.paragraph-after")}
          </span>
        </p>

        <h2
          class="text-3xl font-medium tracking-tight text-primary-950/70 dark:text-primary-200/70 sm:text-2xl lg:text-4xl"
        >
          {t("about.beginning.title")}
        </h2>

        <p
          class="text text-lg text-primary-950/70 dark:text-primary-200/70 sm:text-xl"
        >
          {t("about.beginning.paragraph")}
        </p>

        <Divider />

        <h2
          class="text-3xl font-medium tracking-tight text-primary-950/70 dark:text-primary-200/70 sm:text-2xl lg:text-4xl"
        >
          {t("about.interests.title")}
        </h2>

        <p
          class="text text-lg text-primary-950/70 dark:text-primary-200/70 sm:text-xl"
        >
          {t("about.interests.paragraph")}
        </p>

        <Divider />

        <h2
          class="text-3xl font-medium tracking-tight text-primary-950/70 dark:text-primary-200/70 sm:text-2xl lg:text-4xl"
        >
          {t("about.skills.title")}
        </h2>

        <div
          x-data="{}"
          x-init="$nextTick(() => {let ul = $refs.logos; ul.insertAdjacentHTML('afterend', ul.outerHTML); ul.nextSibling.setAttribute('aria-hidden', 'true');})"
          class="inline-flex w-full flex-nowrap overflow-hidden [mask-image:_linear-gradient(to_right,transparent_0,_black_10rem,_black_calc(100%-10rem),transparent_100%)]"
        >
          <ul
            x-ref="logos"
            class="flex h-auto animate-infinite-scroll items-center justify-center text-primary-950/70 dark:text-primary-200/70 md:justify-start [&_li]:mx-8 [&_span]:max-w-none"
          >
            <AboutPageIcons />
          </ul>
        </div>
        <Divider />
      </div>
    </div>
  </section>
</Layout>
