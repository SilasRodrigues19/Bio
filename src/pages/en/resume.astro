---
import Layout from "@/layouts/Layout.astro";

import pdf from "/resume.pdf";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout
  title={t("resume.layout.title")}
  description={t("resume.layout.description")}
>
  <section class="relative py-16 sm:py-32">
    <div
      class="mx-auto mt-12 max-w-2xl px-4 text-left sm:px-6 lg:max-w-7xl lg:px-8"
    >
      <embed src={pdf} type="application/pdf" width="100%" height="600px" />
    </div>
  </section>
</Layout>
